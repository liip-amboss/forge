/*----------------------------------------*\
  TABLE BASE
\*----------------------------------------*/

table {
  @apply mt-8 w-full;
  @apply bg-white shadow;
}

thead {
  @apply border-b;
}

td,
th {
  @apply p-2;
  @apply text-left;
  @apply border-b;
}

th {
  @apply border-gray-800;
}

td {
  @apply border-gray-300;
}
