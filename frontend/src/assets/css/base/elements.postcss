/*----------------------------------------*\
  ELEMENTS
\*----------------------------------------*/

html,
body {
  height: 100%;
}

html {
  @apply overflow-y-scroll;
  @apply font-sans;
}

a {
  @apply text-gray-700 underline;
  @apply transition-all duration-250;

  &:hover,
  &:focus {
    @apply text-gray-600;
  }
}

h1 {
  @apply text-3xl;
}

h2 {
  @apply text-2xl;
}

h3 {
  @apply text-xl;
}

h4 {
  @apply text-lg;
}

h5 {

}

h6 {

}
